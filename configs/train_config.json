{
  "seed": 1,
  "datamodule": {
    "sequence_data_path": "dataset/pika_sequences.csv",
    "annotations_path": "dataset/pika_annotations.csv",
    "metrics_data_path": "dataset/pika_metrics.csv",
    "split_path": "dataset/pika_uniref_split.csv",
    "max_protein_length": 1500,
    "max_text_length": 250,
    "data_types_to_use": "qa",
    "add_control_question": true,
    "sequence_placeholder": "<protein sequence placeholder> ",
    "train_batch_size": 8,
    "eval_batch_size": 32,
    "test_subjects": "all",
    "num_workers": 4
  },
  "model": {
    "language_model": "microsoft/phi-2",
    "protein_model": "esm2_t33_650M_UR50D",
    "multimodal_strategy": "self-pika",
    "protein_layer_to_use": -1,
    "perceiver_latent_size": 100,
    "num_perceiver_layers": 4,
    "multimodal_layers": [0],
    "enable_gradient_checkpointing": false,
    "lr": 1e-4,
    "weight_decay": 1e-4,
    "schedulers": null,
    "checkpoint": null
  },
  "wandb": {
    "project": "project_name",
    "log_model": "all"
  },
  "checkpoint_callback": {
    "save_partial_checkpoints": true,
    "checkpoint_monitors": ["Biochem-Lite/val_cofactor", "loss/val_loss"],
    "checkpoint_modes": ["max", "min"]
  },
  "trainer": {
    "precision": "16-mixed",
    "val_check_interval": 0.2,
    "max_epochs": 5,
    "devices": 1
  }
}
